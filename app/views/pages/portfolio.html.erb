<div id="portfolio">
  
  <div class="container">
    <div class="row">
      <h3>My Pity Portfolio</h3>
    </div>
  </div>
  
  <!-- Slideshow container -->
  <div class="container">
      <div class="row">
        <div class="slideshow-container">

          <!-- Full-width images with number and caption text -->
            <div class="mySlides fade">
              <img src="https://i.imgur.com/QrwOp5O.png" style="width:100%">
              <div class="text"></div>
            </div>

            <div class="mySlides fade">
              <img src="https://i.imgur.com/rKJwrVm.png" style="width:100%">
              <div class="text"></div>
            </div>

            <div class="mySlides fade">
              <img src="https://i.imgur.com/Eo8xWPb.png" style="width:100%">
              <div class="text"></div>
            </div>

            <div class="mySlides fade">
              <img src="https://i.imgur.com/3mLpygs.png" style="width:100%">
              <div class="text"></div>
            </div>

          <!-- Next and previous buttons -->
          <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
          <a class="next" onclick="plusSlides(1)">&#10095;</a>
        </div>
    </div>
    
    <div class="row">
        <!-- The dots/circles -->
        <div style="text-align:center">
          <span class="dot" onclick="currentSlide(1)"></span> 
          <span class="dot" onclick="currentSlide(2)"></span> 
          <span class="dot" onclick="currentSlide(3)"></span>
          <span class="dot" onclick="currentSlide(4)"></span>  
        </div>
    </div>
  </div>


  <!-- Design Develop Deploy -->
